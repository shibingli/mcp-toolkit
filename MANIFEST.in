# MANIFEST.in - 指定 Python 包中包含的额外文件
# Specify additional files to include in the Python package

include README.md
include LICENSE
include NOTICE
include pyproject.toml

recursive-include python *.py
recursive-include docs *.md
recursive-include scripts *.sh *.bat *.ps1

global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store

